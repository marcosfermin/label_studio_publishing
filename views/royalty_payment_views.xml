<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_royalty_payment_tree" model="ir.ui.view">
        <field name="name">royalty.payment.tree</field>
        <field name="model">royalty.payment</field>
        <field name="arch" type="xml">
            <tree string="Royalty Payments" default_order="payment_date desc">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="payment_date"/>
                <field name="payment_method"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_royalty_payment_form" model="ir.ui.view">
        <field name="name">royalty.payment.form</field>
        <field name="model">royalty.payment</field>
        <field name="arch" type="xml">
            <form string="Royalty Payment">
                <header>
                    <button name="action_post" type="object" string="Post" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_mark_reconciled" type="object" string="Mark Reconciled" class="btn-success" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                    <button name="action_reset_to_draft" type="object" string="Set to Draft" class="btn-secondary" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,reconciled,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="payment_date"/>
                            <field name="payment_method"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="currency_id"/>
                            <field name="journal_id"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="memo"/>
                        <field name="note" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Statement Allocations">
                            <field name="line_ids" context="{'default_partner_id': partner_id}">
                                <tree string="Allocations" editable="bottom">
                                    <field name="statement_id"/>
                                    <field name="amount"/>
                                    <field name="currency_id" readonly="1"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Journal Entry" attrs="{'invisible': [('account_move_id', '=', False)]}">
                            <group>
                                <field name="account_move_id" readonly="1" context="{'default_move_type': 'entry'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_royalty_payment_search" model="ir.ui.view">
        <field name="name">royalty.payment.search</field>
        <field name="model">royalty.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="payment_date"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Reconciled" name="reconciled" domain="[('state', '=', 'reconciled')]"/>
            </search>
        </field>
    </record>

    <record id="action_royalty_payment" model="ir.actions.act_window">
        <field name="name">Royalty Payments</field>
        <field name="res_model">royalty.payment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
