<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_label_studio" model="ir.ui.view">
        <field name="name">res.partner.form.label.studio</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Music Industry" name="music_industry">
                    <group>
                        <group string="Roles">
                            <field name="is_artist"/>
                            <field name="is_writer"/>
                            <field name="is_producer"/>
                            <field name="is_engineer"/>
                            <field name="is_label_vendor"/>
                            <field name="is_distributor"/>
                            <field name="is_pro"/>
                            <field name="is_studio_client"/>
                        </group>
                        <group string="Royalty Preferences">
                            <field name="preferred_payment_method"/>
                            <field name="default_royalty_withholding"/>
                            <field name="minimum_payment_threshold"/>
                            <field name="tax_withholding_rate"/>
                        </group>
                    </group>
                    <group>
                        <group string="Identifiers">
                            <field name="stage_name"/>
                            <field name="spotify_artist_id"/>
                            <field name="apple_music_artist_id"/>
                            <field name="youtube_channel_id"/>
                            <field name="ipi_number"/>
                            <field name="cae_number"/>
                        </group>
                        <group string="Portals">
                            <field name="portal_access_granted"/>
                            <field name="portal_onboarding_complete"/>
                            <field name="signature_image" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <group>
                        <group string="Banking">
                            <field name="bank_account_number"/>
                            <field name="bank_routing_number"/>
                            <field name="iban"/>
                            <field name="swift_bic"/>
                        </group>
                        <group string="Tax Documents">
                            <field name="w9_on_file"/>
                            <field name="w8_on_file"/>
                            <field name="ssn_last_four"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//form/div[@name='button_box']" position="inside">
                <button name="action_view_deals" type="object" class="oe_stat_button" icon="fa-file-text-o">
                    <field name="deal_count" string="Deals" widget="statinfo"/>
                </button>
                <button name="action_view_royalty_statements" type="object" class="oe_stat_button" icon="fa-line-chart">
                    <field name="royalty_statement_count" string="Statements" widget="statinfo"/>
                </button>
                <button name="action_view_bookings" type="object" class="oe_stat_button" icon="fa-calendar">
                    <field name="booking_count" string="Bookings" widget="statinfo"/>
                </button>
                <button name="action_view_works" type="object" class="oe_stat_button" icon="fa-music">
                    <field name="work_count" string="Works" widget="statinfo"/>
                </button>
                <button name="action_view_recordings" type="object" class="oe_stat_button" icon="fa-headphones">
                    <field name="recording_count" string="Recordings" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
