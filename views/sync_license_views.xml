<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sync_license_tree" model="ir.ui.view">
        <field name="name">sync.license.tree</field>
        <field name="model">sync.license</field>
        <field name="arch" type="xml">
            <tree string="Sync Licenses" default_order="license_date desc">
                <field name="name"/>
                <field name="work_id"/>
                <field name="license_type"/>
                <field name="licensee_id"/>
                <field name="license_date"/>
                <field name="status"/>
                <field name="license_fee"/>
            </tree>
        </field>
    </record>

    <record id="view_sync_license_form" model="ir.ui.view">
        <field name="name">sync.license.form</field>
        <field name="model">sync.license</field>
        <field name="arch" type="xml">
            <form string="Sync License">
                <header>
                    <button name="action_activate" type="object" string="Activate" class="btn-primary" attrs="{'invisible': [('status', '!=', 'pending')]}"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,pending,active,expired,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="work_id"/>
                            <field name="license_number"/>
                            <field name="license_type"/>
                        </group>
                        <group>
                            <field name="licensee_id"/>
                            <field name="project_name"/>
                            <field name="license_fee"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Usage">
                            <group>
                                <field name="usage_type"/>
                                <field name="duration_licensed"/>
                                <field name="territory"/>
                                <field name="territory_other" attrs="{'invisible': [('territory', '!=', 'other')]}"/>
                            </group>
                        </page>
                        <page string="Schedule">
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="is_perpetual"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="project_description" widget="text"/>
                            <field name="restrictions" widget="text"/>
                            <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sync_license_search" model="ir.ui.view">
        <field name="name">sync.license.search</field>
        <field name="model">sync.license</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="work_id"/>
                <field name="licensee_id"/>
                <field name="license_type"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
            </search>
        </field>
    </record>

    <record id="action_sync_license" model="ir.actions.act_window">
        <field name="name">Sync Licenses</field>
        <field name="res_model">sync.license</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
