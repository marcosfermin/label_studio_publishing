<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_studio_room_tree" model="ir.ui.view">
        <field name="name">studio.room.tree</field>
        <field name="model">studio.room</field>
        <field name="arch" type="xml">
            <tree string="Studio Rooms" default_order="sequence">
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="hourly_rate"/>
                <field name="day_rate"/>
                <field name="is_occupied"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_studio_room_form" model="ir.ui.view">
        <field name="name">studio.room.form</field>
        <field name="model">studio.room</field>
        <field name="arch" type="xml">
            <form string="Studio Room">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Room Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="location"/>
                            <field name="capacity"/>
                            <field name="size_sqft"/>
                        </group>
                        <group>
                            <field name="hourly_rate"/>
                            <field name="day_rate"/>
                            <field name="overtime_rate"/>
                            <field name="color"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Equipment">
                            <field name="equipment_ids" widget="many2many_tags"/>
                            <field name="facilities" widget="text"/>
                        </page>
                        <page string="Availability">
                            <group>
                                <field name="active"/>
                                <field name="maintenance_mode"/>
                                <field name="availability_notes"/>
                            </group>
                        </page>
                        <page string="Statistics" attrs="{'invisible': [('booking_count', '=', 0)]}">
                            <group>
                                <field name="booking_count" readonly="1"/>
                                <field name="utilization_rate" readonly="1"/>
                                <field name="total_revenue" readonly="1"/>
                                <field name="current_booking_id" readonly="1"/>
                                <field name="next_booking_id" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_studio_room_search" model="ir.ui.view">
        <field name="name">studio.room.search</field>
        <field name="model">studio.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="location"/>
                <filter string="Available" name="available" domain="[('maintenance_mode', '=', False), ('active', '=', True)]"/>
                <filter string="Occupied" name="occupied" domain="[('is_occupied', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_studio_room" model="ir.actions.act_window">
        <field name="name">Studio Rooms</field>
        <field name="res_model">studio.room</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
