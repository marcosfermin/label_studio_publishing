<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_royalty_rule_tree" model="ir.ui.view">
        <field name="name">royalty.rule.tree</field>
        <field name="model">royalty.rule</field>
        <field name="arch" type="xml">
            <tree string="Royalty Rules">
                <field name="name"/>
                <field name="rule_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_royalty_rule_form" model="ir.ui.view">
        <field name="name">royalty.rule.form</field>
        <field name="model">royalty.rule</field>
        <field name="arch" type="xml">
            <form string="Royalty Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="rule_type"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_royalty_rule_search" model="ir.ui.view">
        <field name="name">royalty.rule.search</field>
        <field name="model">royalty.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="rule_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_royalty_rule" model="ir.actions.act_window">
        <field name="name">Royalty Rules</field>
        <field name="res_model">royalty.rule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
