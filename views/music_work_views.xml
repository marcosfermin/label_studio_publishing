<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_music_work_tree" model="ir.ui.view">
        <field name="name">music.work.tree</field>
        <field name="model">music.work</field>
        <field name="arch" type="xml">
            <tree string="Musical Works" default_order="title">
                <field name="title"/>
                <field name="internal_work_id"/>
                <field name="iswc"/>
                <field name="work_type"/>
                <field name="primary_pro"/>
                <field name="status"/>
                <field name="splits_validated"/>
            </tree>
        </field>
    </record>

    <record id="view_music_work_form" model="ir.ui.view">
        <field name="name">music.work.form</field>
        <field name="model">music.work</field>
        <field name="arch" type="xml">
            <form string="Musical Work">
                <header>
                    <button name="action_view_recordings" type="object" string="View Recordings" class="btn-secondary"/>
                    <button name="action_view_registrations" type="object" string="PRO Registrations" class="btn-secondary"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,registered,published,archived"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="title" placeholder="Work Title..."/></h1>
                        <h2><field name="internal_work_id" readonly="1"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="work_type"/>
                            <field name="language"/>
                            <field name="duration_display" readonly="1"/>
                            <field name="original_pub_date"/>
                        </group>
                        <group>
                            <field name="iswc"/>
                            <field name="primary_pro"/>
                            <field name="genre_ids" widget="many2many_tags"/>
                            <field name="commercial_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contributors">
                            <field name="composer_ids" widget="many2many_tags"/>
                            <field name="publisher_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Splits">
                            <group>
                                <field name="splits_total_writer" readonly="1"/>
                                <field name="splits_total_publisher" readonly="1"/>
                                <field name="splits_validated" readonly="1"/>
                            </group>
                            <field name="split_ids">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="contributor_id"/>
                                    <field name="role"/>
                                    <field name="writer_share"/>
                                    <field name="publisher_share"/>
                                    <field name="controlled"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Recordings">
                            <field name="recording_ids" context="{'default_work_id': active_id}">
                                <tree editable="bottom">
                                    <field name="title"/>
                                    <field name="isrc"/>
                                    <field name="first_release_date" readonly="1"/>
                                    <field name="main_artist_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_music_work_search" model="ir.ui.view">
        <field name="name">music.work.search</field>
        <field name="model">music.work</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="iswc"/>
                <field name="work_type"/>
                <filter string="Validated Splits" name="splits_validated" domain="[('splits_validated', '=', True)]"/>
                <filter string="Active" name="active" domain="[('status', 'in', ['draft','registered','published'])]"/>
            </search>
        </field>
    </record>

    <record id="action_music_work" model="ir.actions.act_window">
        <field name="name">Musical Works</field>
        <field name="res_model">music.work</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
