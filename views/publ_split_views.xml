<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_publ_split_tree" model="ir.ui.view">
        <field name="name">publ.split.tree</field>
        <field name="model">publ.split</field>
        <field name="arch" type="xml">
            <tree string="Publishing Splits" default_order="work_id,sequence">
                <field name="work_id"/>
                <field name="contributor_id"/>
                <field name="role"/>
                <field name="writer_share"/>
                <field name="publisher_share"/>
                <field name="controlled"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_publ_split_form" model="ir.ui.view">
        <field name="name">publ.split.form</field>
        <field name="model">publ.split</field>
        <field name="arch" type="xml">
            <form string="Publishing Split">
                <sheet>
                    <group>
                        <group>
                            <field name="work_id"/>
                            <field name="sequence"/>
                            <field name="contributor_id"/>
                            <field name="role"/>
                        </group>
                        <group>
                            <field name="writer_share"/>
                            <field name="publisher_share"/>
                            <field name="controlled"/>
                            <field name="admin_entity_id"/>
                        </group>
                    </group>
                    <field name="notes" widget="text"/>
                    <field name="active"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_publ_split_search" model="ir.ui.view">
        <field name="name">publ.split.search</field>
        <field name="model">publ.split</field>
        <field name="arch" type="xml">
            <search>
                <field name="work_id"/>
                <field name="contributor_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_publ_split" model="ir.actions.act_window">
        <field name="name">Publishing Splits</field>
        <field name="res_model">publ.split</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
