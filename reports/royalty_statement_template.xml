<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="royalty_statement_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Royalty Statement - <span t-esc="doc.name"/></h2>
                    <p>
                        <strong>Artist:</strong>
                        <span t-esc="doc.partner_id.display_name"/>
                    </p>
                    <p>
                        <strong>Period:</strong>
                        <span t-esc="format_date(doc.period_start)"/>
                        -
                        <span t-esc="format_date(doc.period_end)"/>
                    </p>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Track</th>
                                <th>Usage</th>
                                <th class="text-end">Net Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.usage_line_ids" t-as="line">
                                <td><span t-esc="format_date(line.period_end)"/></td>
                                <td><span t-esc="line.track_name or ''"/></td>
                                <td><span t-esc="line.usage_type"/></td>
                                <td class="text-end"><span t-esc="format_amount(line.net_amount, doc.currency_id)"/></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="mt16">
                        <p><strong>Gross Amount:</strong> <span t-esc="format_amount(doc.total_gross_amount, doc.currency_id)"/></p>
                        <p><strong>Fees:</strong> <span t-esc="format_amount(doc.total_fee_amount, doc.currency_id)"/></p>
                        <p><strong>Recouped:</strong> <span t-esc="format_amount(doc.recouped_amount, doc.currency_id)"/></p>
                        <p><strong>Net Payable:</strong> <span t-esc="format_amount(doc.total_amount, doc.currency_id)"/></p>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_royalty_statement"
        model="royalty.statement"
        string="Royalty Statement"
        report_type="qweb-pdf"
        name="label_studio_publishing.royalty_statement_template"
        file="label_studio_publishing.royalty_statement_template"
    />
</odoo>
