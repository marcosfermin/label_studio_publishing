<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="booking_confirmation_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="booking">
                <div class="page">
                    <h2>Studio Booking Confirmation</h2>
                    <p><strong>Booking:</strong> <span t-esc="booking.name"/></p>
                    <p><strong>Client:</strong> <span t-esc="booking.client_id.display_name"/></p>
                    <p><strong>Room:</strong> <span t-esc="booking.room_id.name"/></p>
                    <p>
                        <strong>Schedule:</strong>
                        <span t-esc="format_datetime(booking.start_datetime)"/>
                        -
                        <span t-esc="format_datetime(booking.end_datetime)"/>
                    </p>
                    <p><strong>Service:</strong> <span t-esc="booking.service_type"/></p>
                    <p><strong>Total:</strong> <span t-esc="format_amount(booking.total_amount, booking.currency_id)"/></p>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_booking_confirmation"
        model="studio.booking"
        string="Booking Confirmation"
        report_type="qweb-pdf"
        name="label_studio_publishing.booking_confirmation_template"
        file="label_studio_publishing.booking_confirmation_template"
    />
</odoo>
